<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="btn_usercenter_sumbit">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/btn_usercenter_selector</item>
        <item name="android:textColor">@color/btn_usercenter_color</item>
        <item name="android:textSize">16sp</item>
    </style>
        <style name="btn_sumbit">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:background">@drawable/btn_selector</item>
        <!-- <item name="android:textColor">@color/night_text_color</item> -->
        <item name="android:textSize">18sp</item>
    </style>
</resources>
